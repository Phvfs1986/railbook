<div class='d-flex justify-content-center'>
  <h1>
  <p>
    <% if @profile.avatar == 'avatar' %>
      <%= image_tag @user.avatar_url, default: "blank", size: 100, class: "rounded-circle shadow-1-strong me-3" %>
    <% else %>
      <%= image_tag @profile.avatar, default: "blank", size: 100, class: "rounded-circle shadow-1-strong me-3" %>
    <% end %>
   <%= @user_full_name %>'s profile!</p>
  </h1>
  <% unless @user.friends.include?(current_user) || @user == current_user %>
    <small><span class="badge bg-primary rounded-pill"><%= link_to 'Add Friend', user_create_request_path(params[:id]), class: "link-light link-underline-opacity-0" %></span></small>
  <% end %><br>
</div>

<% unless @user_posts.empty? %>
  <div class='d-flex justify-content-center'>
    <h2>Posts:</h2>
  </div>
  <% @user_posts.each do |post| %>
    <section class="gradient-custom">
      <div class="container my-3 py-3">
        <div class="row d-flex justify-content-center">
          <div class="col-md-12 col-lg-10 col-xl-8">
            <div class="card">
              <div class="card-body p-1">

                <div class="row">
                  <div class="col">
                    <div class="d-flex flex-start">
                      <%= image_tag @user.gravatar_url, default: "blank", size: 60, class: "rounded-circle shadow-1-strong me-3" %>
                      <div class="flex-grow-1 flex-shrink-1">
                        <div>
                          <div class="d-flex justify-content-between align-items-center">
                            <p class="mb-1">
                              <strong><%= @profile.first_name %></strong><span class="small"> - <%= post.created_at.strftime('%D at %H:%M') %></span>
                            </p>

                          </div>
                          <p class="small mb-0">
                            <%= post.body %>
                          </p>
                          <% unless post.likes.count.zero? %>
                            <small><%= post.likes.count %> Likes</small>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
<% else %>
  <div class='d-flex justify-content-center'>
    <h2>No posts Yet!</h2>
  </div>
<% end %>